													<div class="col-sm-3 col-5">
														<h6 class="f-w-500">Availability <span class="pull-end">:</span></h6>
													</div>
													<div class="col-sm-9 col-7">
														<span>-</span>
													</div>
												</div>
												<div class="row mb-2">
													<div class="col-sm-3 col-5">
														<h6 class="f-w-500">
															Age <span class="pull-end">:</span>
														</h6>
													</div>
													<div class="col-sm-9 col-7">
														<span>-</span>
													</div>
												</div>
												<div class="row mb-2">
