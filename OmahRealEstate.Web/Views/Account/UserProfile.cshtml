@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}

	<script>
		$(function() {
			var tab = '@ViewData["ActiveTab"]';
			if (tab.length > 0) {
				var profileSettings = document.querySelector('#p-tabs a[href="#' + tab + '"]');

				if(profileSettings) {
					var tabInstance = new bootstrap.Tab(profileSettings);
					tabInstance.show();

					var firstError = document.querySelector('.input-validation-error');

					if(firstError) {
						firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
						firstError.focus();
					}
				}				
			}
		});
	</script>
}

